# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{*.rst,*.rst.jinja,*.rst.meta.jinja}]
end_of_line = lf
max_line_length = off
trim_trailing_whitespace = false

[{*.json,*.json.jinja,*.json.meta.jinja}]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false
